# {{ ansible_managed|comment }}
# Additional configuration for Nginx.

client_header_buffer_size   {{ openresty_client_header_buffer_size }};
large_client_header_buffers {{ openresty_large_client_header_buffers }};
client_body_timeout         {{ openresty_client_body_timeout }};
client_header_timeout       {{ openresty_client_header_timeout }};
send_timeout                {{ openresty_send_timeout }};
limit_conn_zone             {{ openresty_limit_conn_zone }};
limit_conn                  {{ openresty_limit_conn }};
ssl_ciphers                 '{{ openresty_ssl_ciphers }}';
ssl_session_tickets         {{ openresty_ssl_session_tickets }};
ssl_dhparam                 /etc/nginx/dh{{ openresty_dh_size }}.pem;
{% for header in openresty_add_header %}
add_header                  {{ header }};
{% endfor %}
